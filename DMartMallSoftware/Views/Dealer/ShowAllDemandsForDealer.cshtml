<div class="row">
    <div class="col-md-12">
        <form method="get" action="ShowAllDemandsForDealer">
            <table class="table text-center">
                <tr>
                    <td class=""><input type="text" id="Name" name="Name" class="form-control" placeholder="Enter Product Name..." /></td>

                    <td class="">
                        <select class="form-control" id="status" name="status" asp-items="@(new SelectList(ViewBag.Statuses,"Id","Status"))">
                        </select>
                    </td>

                    <td class=""><input type="submit" class="btn btn-primary ms-5" name="Search" value="Search" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SrNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SrNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @if (item.StatusId == 1 || item.StatusId == 9)
                    {
                        var x = ("xyz1" + item.Id).ToString();
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@x">Delete</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Delete Request?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-warning ">Are You Sure To Delete Request @Html.DisplayFor(modelItem => item.Name) ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Delete", "DeleteDemand", new { Id=item.Id }, new{ @class="btn btn-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span>&nbsp;</span>
                        @Html.ActionLink("Accept Request", "AcceptRequest", new { Id=item.Id }, new{ @class="btn btn-primary"})
                    }
                    else if (item.StatusId == 2)
                    {
                    }
                    else if (item.StatusId == 4)
                    {
                        var y = ("apqr2" + item.Id).ToString();
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@y">Confirm</button>
                        <div class="modal" id="@y">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Amount Received?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-success ">Are You Sure Receive Rs. @Html.DisplayFor(modelItem => item.Total) ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Confirm", "ConfirmByDealer", new { Id=item.Id }, new{ @class="btn btn-primary"})
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span>&nbsp;</span>
                        var x = ("apqr3" + item.Id).ToString();
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#@x">Pay Again</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Amount Not Received?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-danger">Are You Sure Amount Not Receive ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Yes", "PayAgain", new { Id=item.Id }, new{ @class="btn btn-success"})
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item.StatusId == 5)
                    {
                        var x = ("apqr4" + item.Id).ToString();
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@x">Shipping</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Confirm Shipping?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-success">Are You Sure The Product @Html.DisplayFor(modelItem => item.Name) Is Shipped Successfully ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Shipping", "ShippingByDealer", new { Id=item.Id }, new{ @class="btn btn-primary"})
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item.StatusId == 6 || item.StatusId == 11)
                    {
                        var x = ("apqr5" + item.Id).ToString();
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#@x">Delivered</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Confirm Delivery?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-success">Are You Sure The Product @Html.DisplayFor(modelItem => item.Name) Is Delivered Successfully ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Delivered", "DeliveredByDealer", new { Id=item.Id }, new{ @class="btn btn-success"})
                                    </div>
                                </div>
                            </div>
                        </div>
                    }



                </td>
            </tr>
        }
    </tbody>
</table>


