@model DMartMallSoftware.Models.StaffModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Staff Member Details</h1>


<hr />
<div class="row">
    <div class="col-md-4 d-block m-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card shadow">
        
        <div class="card-body">
                    
                    <div class="form-group">
                        <label asp-for="UserType" class="control-label"></label>
                        <select asp-for="UserTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.UTypes1,"Id","UserType"))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsConfirmed" class="control-label" for="flexCheckDefault"></label>
                        <input asp-for="IsConfirmed" type="checkbox" class="form-control form-check-input" id="flexCheckDefault" />
                        <span asp-validation-for="IsConfirmed" class="text-danger"></span>
                    </div>

        </div>
                <div class="card-footer col-md-12  row d-block m-auto">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="mt-3" asp-controller="Register" asp-action="ShowAllStaff"><p class=" float-end">Back to List</p></a>
                    </div>
        </div>
    </div>
            
           
           
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
