                            else if (int.Parse(HttpContextAccessor.HttpContext.Session.GetString("UserTypeId")) == 6)
                            {
                                <li class="nav-item" style="padding-left:50px">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Dealer" asp-action="ShowAllDemandsForDealer"><p class="text-white">New Requests From D-Mart</p></a>
                                </li>
                                <li class="nav-item dropdown" style="margin-left:400px">
                                    <a class="nav-link dropdown-toggle float-end " asp-area="" data-bs-toggle="dropdown">
