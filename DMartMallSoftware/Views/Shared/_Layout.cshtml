                                    </a>
                                    <ul class="dropdown-menu " style="width:50% ">
                                        <li>
                                            <p class="text-white dropdown-item">
                                                @Html.ActionLink("Edit My Profile", "EditMyProfile","Register",
                                        new { Id =  @HttpContextAccessor.HttpContext.Session.GetString("Id")},
                                        new{ @class="text-primary"})
                                            </p>
                                        </li>
                                        <li>
                                            <p class="text-white dropdown-item">
                                                @Html.ActionLink("Change Password", "ChangePassword","Register",
