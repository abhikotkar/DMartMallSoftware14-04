                        @if (String.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Id")))
                        {

                            <li class="nav-item ">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h1 class="text-white">D-Mart Mall Software</h1></a>
                            </li>
                            <li class="nav-item " style="margin-left:800px">
                                <a class="nav-link" asp-area="" asp-controller="Register" asp-action="SignIn"><p class="text-white btn btn-primary">SignIn</p></a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" asp-area="" asp-controller="Register" asp-action="Create"><p class="text-white btn btn-success">Register</p></a>
                            </li>

                        }
                    </ul>
