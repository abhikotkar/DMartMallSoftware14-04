                            {
                                <li class="nav-item" style="padding-left:50px">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="ShowAllStock"><p class="text-white">Stock</p></a>
                                </li>
                                <li class="nav-item" style="padding-left:50px">
