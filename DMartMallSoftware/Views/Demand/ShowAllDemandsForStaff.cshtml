        </button>
    </div>
}
@if (TempData["DeleteDemandError"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["DeleteDemandError"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["RejectDemand"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["RejectDemand"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["RejectDemandError"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["RejectDemandError"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["ConfirmByAdmin"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["ConfirmByAdmin"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["ConfirmByAdminError"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["ConfirmByAdminError"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["DeliveredByAdmin"] != null)
{
    <div class="alert alert-danger">
        <strong>Success !</strong> @TempData["DeliveredByAdmin"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["DeliveredByAdminError"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["DeliveredByAdminError"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["NotDelinered"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["NotDelinered"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
@if (TempData["NotDelineredError"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["NotDelineredError"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <form method="get" action="ShowAllDemandsForStaff">
            <table class="table text-center">
                <tr>
                    <td class=""><input type="text" id="Name" name="Name" class="form-control" placeholder="Enter Product Name..." /></td>

                    <td class="">
                        <select class="form-control" id="dealer" name="dealer" asp-items="@(new SelectList(ViewBag.Dealers,"Id","Name"))">
                        </select>
                    </td>
                    <td class="">
                        <select class="form-control" id="status" name="status" asp-items="@(new SelectList(ViewBag.Statuses,"Id","Status"))">
                        </select>
                    </td>

                    <td class=""><input type="submit" class="btn btn-primary ms-5" name="Search" value="Search" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SrNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dealer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SrNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dealer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @if (item.StatusId == 1 || item.StatusId == 3 || item.StatusId == 9)
                    {
                        var x = ("ab" + item.Id).ToString();
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@x">Delete</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Delete Demand?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-warning ">Are You Sure To Delete Demand @Html.DisplayFor(modelItem => item.Name) ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Delete", "DeleteDemand", new { Id=item.Id }, new{ @class="btn btn-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item.StatusId == 2 || item.StatusId == 10)
                    {
                        var x = ("apqr" + item.Id).ToString();
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@x">Reject</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Reject Request?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-warning ">Are You Sure To Reject Request @Html.DisplayFor(modelItem => item.Name) ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Reject", "RejectOffer", new { Id = item.Id }, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span>&nbsp;</span>
                        var y = ("apqr1" + item.Id).ToString();
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@y">Pay</button>
                        <div class="modal" id="@y">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Pay Amount?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-warning ">Are You Sure To Pay Rs. @Html.DisplayFor(modelItem => item.Total) ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Pay", "ConfirmByAdmin", new { Id = item.Id }, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item.StatusId == 4 || item.StatusId == 5 || item.StatusId == 6)
                    {
                    }
                    else if (item.StatusId == 7)
                    {
                        var x = ("apqr6" + item.Id).ToString();
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@x">Delivered</button>
                        <div class="modal" id="@x">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Confirm Delivery?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-success ">Are You Sure Product @Html.DisplayFor(modelItem => item.Name) Delivered Successfully?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Delivered", "DeliveredByAdmin", new { Id = item.Id }, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <span>&nbsp;</span>
                        var y = ("apqr7" + item.Id).ToString();
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@y">Not Delivered</button>
                        <div class="modal" id="@y">
                            <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <b> Confirm Delivery?</b>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-warning ">Are You Sure Product @Html.DisplayFor(modelItem => item.Name) Not Delivered ?</h4>
                                    </div>
                                    <div class="modal-footer">
                                        @Html.ActionLink("Not Delivered", "NotDelinered",new { Id = item.Id }, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item.StatusId == 8)
                    {
                        @Html.ActionLink("Add To Stock", "AddToStock", new { Id = item.Id }, new { @class = "btn btn-primary" })
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
