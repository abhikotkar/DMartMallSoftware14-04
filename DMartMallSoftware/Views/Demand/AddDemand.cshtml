@model DMartMallSoftware.Models.DemandModel

@{
    ViewData["Title"] = "AddDemand";
}

<h1>Add Demand</h1>

<hr />
<div class="row">
    <div class="col-md-4 d-block m-auto">
        <form asp-action="AddDemand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card shadow">

                <div class="card-body">

                    <div class="form-group" >
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control " />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Unit" class="control-label"></label>
                        <select asp-for="UnitId" class="form-control" asp-items="@(new SelectList(ViewBag.UnitTypes,"Id","Unit"))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dealer" class="control-label"></label>
                        <select asp-for="DealerId" class="form-control" asp-items="@(new SelectList(ViewBag.Dealers,"Id","Name"))">
                        </select>
                    </div>

                </div>
                <div class="card-footer col-md-12  row d-block m-auto">
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                        <a class="mt-3" asp-controller="Stock" asp-action="ShowAllStock"><p class=" float-end">Back to List</p></a>
                    </div>
                </div>
            </div>



        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
