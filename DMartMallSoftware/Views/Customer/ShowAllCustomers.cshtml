
@model IEnumerable<DMartMallSoftware.Models.CustomerModel>

@{
    ViewData["Title"] = "ShowAllCustomers";
}

<h1>Show All Customers</h1>
<hr/>
<p>
    <a class="btn btn-primary" asp-controller="Customer" asp-action="AddCustomer">Add New Customer</a>
</p>

<hr />
<div class="row">
    <div class="col-md-12">
        <form method="get" action="ShowAllCustomers">
            <table class="table text-center">
                <tr>
                    <td class=""><input type="text" id="searchText" name="searchText" class="form-control" placeholder="Enter Mobile No..." /></td>

                    <td class=""><input type="submit" class="btn btn-primary ms-5" name="Search" value="Search" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SrNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SrNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>

                   
                        @Html.ActionLink("Edit", "EditCustomerDetails", new { Id=item.Id }, new{ @class="btn btn-primary"})
                    
                    @Html.ActionLink("Details", "Details", new { Id=item.Id }, new{ @class="btn btn-success"}) 
                     @if (item.RemarkId == 1)
                    {
                        @Html.ActionLink("Cancel Bill", "CancelCustomerBill", new { Id=item.Id }, new{ @class="btn btn-danger"})
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

