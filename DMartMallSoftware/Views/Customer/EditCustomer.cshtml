@model DMartMallSoftware.Models.CustomerModelV1

@{
    ViewData["Title"] = "EditCustomer";
}

<h1>Edit Customer</h1>

<hr />


@if (TempData["EditCustomerFail"] != null)
{
    <div class="alert alert-danger">
        <strong>Unsuccess !</strong> @TempData["EditCustomerFail"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert">
        </button>
    </div>
}
<div class="row">
    <div class="col-md-4 d-block m-auto">
        <form asp-action="EditCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card shadow">

                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                </div>
                <div class="card-footer col-md-12  row d-block m-auto">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="mt-3" asp-controller="Customer" asp-action="AllCustomers"><p class=" float-end">Back to List</p></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>